                 "INSERT INTO VIDEOCONSOLA (id,nombre) VALUES (NEXT VALUE FOR VideoConsola_Gen,'Gameboy')","INSERT INTO VIDEOCONSOLA (id, nombre) VALUES (NEXT VALUE FOR VideoConsola_Gen,'PS1')",
                 "INSERT INTO VIDEOJUEGO (titulo, imagen, descripcion, disponibilidad, precio, tipo_id, videoconsola_id) VALUES ('MarioKart', 'mariokart.jpg', ' Un juego divertido de carreras lleno de personajes icónicos de Mario. Compite con tus amigos en emocionantes pistas y utiliza potenciadores para ganar la carrera.',10,50,1,1)",
